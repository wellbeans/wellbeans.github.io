// typography

body
	font-family $body
	line-height 1.4

p
ul
footer a
	color $darktype
	line-height 1.6
	font-size 1.55rem
	margin-bottom 20px
	&:last-of-type
		margin-bottom 0

ul
	list-style-type disc
	list-style-position inside
	list-style-image none
	margin-left 0
	&:last-of-type
		margin-bottom 20px


h1
h2
h3
	font-family $headline
	font-weight normal
	margin-top 0
	line-height 1.6

h1
	font-size 2.5rem

h2
	font-size 2rem